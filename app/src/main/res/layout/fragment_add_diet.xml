<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDietFragment"
    android:background="@color/ivory">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/top_bar"
            layout="@layout/view_add_diet_top_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <include
                        android:id="@+id/day1"
                        layout="@layout/item_day_of_week" />
                    <include
                        android:id="@+id/day2"
                        layout="@layout/item_day_of_week" />
                    <include
                        android:id="@+id/day3"
                        layout="@layout/item_day_of_week" />
                    <include
                        android:id="@+id/day4"
                        layout="@layout/item_day_of_week" />
                    <include
                        android:id="@+id/day5"
                        layout="@layout/item_day_of_week" />
                    <include
                        android:id="@+id/day6"
                        layout="@layout/item_day_of_week" />
                    <include
                        android:id="@+id/day7"
                        layout="@layout/item_day_of_week" />
                </LinearLayout>

                <EditText
                    android:id="@+id/et_price"
                    android:layout_width="150dp"
                    android:layout_height="32sp"
                    android:hint="Price"
                    android:inputType="numberDecimal"
                    android:textSize="16sp"
                    android:textColor="@color/dark_cement"
                    android:background="@drawable/rounded_edges_rect"
                    android:backgroundTint="@color/light_cement"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/et_description"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Description"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:textSize="16sp"
                    android:textColor="@color/dark_cement"
                    android:background="@drawable/rounded_edges_rect"
                    android:backgroundTint="@color/light_cement"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:textAlignment="center"/>

                <EditText
                    android:id="@+id/et_add_info"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:hint="Additional Info and Instructions"
                    android:inputType="textMultiLine"
                    android:minLines="3"
                    android:textColor="@color/dark_cement"
                    android:textSize="16sp"
                    android:background="@drawable/rounded_edges_rect"
                    android:backgroundTint="@color/light_cement"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:textAlignment="center"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_share_plan"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:text="Share Plan!"
                    android:textSize="18sp"
                    android:textAllCaps="false"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="@color/mint"
                    android:background="@drawable/rounded_edges_rect"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
