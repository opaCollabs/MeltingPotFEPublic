<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:backgroundTint="@color/ivory">

    <EditText
        android:id="@+id/editTextDietTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="What should should we call this diet?"
        android:inputType="text" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonStartPlanning"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/rounded_edges_rect"
        android:backgroundTint="@color/mint"
        android:text="Start planning!"
        android:textColor="@android:color/white" />
</LinearLayout>
